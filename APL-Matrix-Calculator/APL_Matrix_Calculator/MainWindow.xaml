<Window x:Class="APL_Matrix_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Matrix Calculator" Height="350" Width="525">
    <Grid>
        <Button x:Name="AddButton" Content="A+B" Height="60" Margin="30,25,0,0" VerticalAlignment="Top" Width="100" FontSize="30" HorizontalAlignment="Left" Click="Add"/>
        <Button x:Name="SubButton" Content="A-B" Height="60" Margin="200,25,200,0" VerticalAlignment="Top" Width="100" FontSize="30" HorizontalAlignment="Center" Click ="Sub"/>
        <Button x:Name="MulButton" Content="A*B" Height="60" Margin="0,25,30,0" VerticalAlignment="Top" Width="100" HorizontalAlignment="Right" IsDefault="True" FontSize="30" Click="Mul"/>
        <TextBlock HorizontalAlignment="Center" Height="28" Margin="208,101,209,190" TextWrapping="Wrap" Text=" Selected:" VerticalAlignment="Center" Width="100" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Height="41" Margin="30,160,0,0" TextWrapping="Wrap" Text=" Matrix A" VerticalAlignment="Top" Width="100" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Height="41" Margin="387,160,0,0" TextWrapping="Wrap" Text=" Matrix B" VerticalAlignment="Top" Width="100" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="433,201,0,0" TextWrapping="Wrap" Text="x" VerticalAlignment="Top" Width="12" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="76,201,0,0" TextWrapping="Wrap" Text="x" VerticalAlignment="Top" Width="14" FontSize="20"/>
        <TextBlock x:Name="State" HorizontalAlignment="Left" Height="29" Margin="234,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="51" FontSize="20"/>
        <ComboBox x:Name="A_Rows" HorizontalAlignment="Left" Height="30" Margin="30,201,0,0" VerticalAlignment="Top" Width="35">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
            <sys:Int32>4</sys:Int32>
        </ComboBox>
        <ComboBox x:Name="A_Columns" HorizontalAlignment="Left" Height="30" Margin="95,201,0,0" VerticalAlignment="Top" Width="35">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
            <sys:Int32>4</sys:Int32>
        </ComboBox>
        <ComboBox x:Name="B_Rows" HorizontalAlignment="Left" Height="30" Margin="387,201,0,0" VerticalAlignment="Top" Width="35">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
            <sys:Int32>4</sys:Int32>
        </ComboBox>
        <ComboBox x:Name="B_Columns" HorizontalAlignment="Left" Height="30" Margin="452,201,0,0" VerticalAlignment="Top" Width="35" RenderTransformOrigin="0.796,0.591">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
            <sys:Int32>4</sys:Int32>
        </ComboBox>
        <Button x:Name="Next" Content="Next" HorizontalAlignment="Left" Height="48" Margin="208,234,0,0" VerticalAlignment="Top" Width="100" FontSize="24" Click="NextWindow"/>
    </Grid>
</Window>
 
